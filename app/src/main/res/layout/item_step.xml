<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/x25">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.git.reny.wallpaper.widget.RatioImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:base="width"
            app:height_ratio="911"
            app:width_ratio="1619" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:paddingLeft="@dimen/x40"
            android:paddingTop="@dimen/y20"
            android:paddingRight="@dimen/x40"
            android:paddingBottom="@dimen/y20"
            android:textColor="#ffffff"
            android:textSize="@dimen/x40"
            app:rv_backgroundColor="#aa000000"
            app:rv_cornerRadius_BR="20dp"
            app:rv_cornerRadius_TR="20dp"
            tools:text="第一步" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y10"
        android:textColor="#333"
        android:textSize="@dimen/x42"
        tools:text="第一步:fldsalfsjadfljsa;if" />


</LinearLayout>