<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bg">

    <shem.com.materiallogin.MaterialLoginView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginView="@layout/custom_login_view"
        app:registerIcon="@drawable/ic_person_add_white"
        app:registerView="@layout/custom_register_view" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolHeight"
        android:background="@android:color/transparent"
        android:navigationIcon="@mipmap/ic_cancel_gray"
        app:navigationIcon="@mipmap/ic_cancel_gray" />

</FrameLayout>

